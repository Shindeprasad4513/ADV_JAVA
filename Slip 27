//1.Write a Java Program to display the details of College (CID, CName, address, Year) on JTable. [10 M]

import javax.swing.*;
import javax.swing.table.DefaultTableModel;

public class CollegeTable {
    public static void main(String[] args) {
        // Frame creation
        JFrame frame = new JFrame("College Details");
        frame.setSize(500, 300);
        frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);

        // Column Names
        String[] columnNames = {"CID", "CName", "Address", "Year"};

        // Sample Data (you can modify)
        Object[][] data = {
            {"C101", "Modern College", "Pune", "1990"},
            {"C102", "Fergusson College", "Pune", "1885"},
            {"C103", "COEP", "Pune", "1854"},
            {"C104", "MIT-WPU", "Kothrud", "1983"}
        };

        // Table Model and JTable
        DefaultTableModel model = new DefaultTableModel(data, columnNames);
        JTable table = new JTable(model);

        // Scroll pane for table
        JScrollPane scrollPane = new JScrollPane(table);
        frame.add(scrollPane);

        frame.setVisible(true);
    }
}


//2.Design a servlet that provides information about a HTTP request from a client, such as IP address and browser type. The servlet also provides information about the server on which the servlet is running, such as the operating system type, and the names of currently loaded servlets

HttpInfoSrevlet.java

import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import javax.servlet.annotation.WebServlet;

@WebServlet("/info")  // URL pattern for the servlet
public class HttpInfoServlet extends HttpServlet {

    protected void doGet(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {

        response.setContentType("text/html");
        PrintWriter out = response.getWriter();

        // --- Client Information ---
        String clientIP = request.getRemoteAddr();
        String browser = request.getHeader("User-Agent");

        // --- Server Information ---
        String serverName = request.getServerName();
        String serverInfo = getServletContext().getServerInfo();
        String osName = System.getProperty("os.name");

        // --- Loaded Servlets ---
        ServletContext context = getServletContext();
        java.util.Enumeration<String> servlets = context.getServletNames();

        out.println("<html><head><title>HTTP Info Servlet</title></head><body>");
        out.println("<h2 style='color:blue;'>HTTP Request and Server Information</h2>");

        out.println("<h3>Client Information:</h3>");
        out.println("<b>Client IP Address:</b> " + clientIP + "<br>");
        out.println("<b>Browser Type:</b> " + browser + "<br><br>");

        out.println("<h3>Server Information:</h3>");
        out.println("<b>Server Name:</b> " + serverName + "<br>");
        out.println("<b>Server Software:</b> " + serverInfo + "<br>");
        out.println("<b>Operating System:</b> " + osName + "<br><br>");

        out.println("<h3>Loaded Servlets:</h3>");
        while (servlets.hasMoreElements()) {
            out.println(servlets.nextElement() + "<br>");
        }

        out.println("</body></html>");
    }
}
