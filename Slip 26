<%
String no=request.getParameter("number");
if(no!=null)
{
int n=Integer.parseInt(no),last,first;
last=n%10;
while(n>=10)
{
n=n/10;
}
first=n;
int sum=first+last;
out.println("<h1 style=color:red;>sum:"+sum+"</h1>");
}
%>
</body>
